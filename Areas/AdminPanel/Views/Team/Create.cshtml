
@model CreateTeamVM
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <a class="btn btn-dark" asp-controller="team" asp-action="index">Back</a>
            <h4 class="card-title">Create Team</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Photo"></label>
                    <input asp-for="Photo" class="form-control" placeholder="Photo">
                    <span asp-validation-for="Photo"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Name">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TwitterLink">TwitterLink</label>
                    <input asp-for="TwitterLink" class="form-control" placeholder="TwitterLink">
                    <span asp-validation-for="TwitterLink"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InstagramLink">InstagramLink</label>
                    <input asp-for="InstagramLink" class="form-control" placeholder="InstagramLink">
                    <span asp-validation-for="InstagramLink"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FacebookLink">FacebookLink</label>
                    <input asp-for="FacebookLink" class="form-control" placeholder="FacebookLink">
                    <span asp-validation-for="FacebookLink"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LinkedinLink">LinkedinLink</label>
                    <input asp-for="LinkedinLink" class="form-control" placeholder="LinkedinLink">
                    <span asp-validation-for="LinkedinLink"></span>
                </div>
                <div class="form-group">
                    <select asp-for="PositionId">
                        @foreach (Position position in ViewBag.Positions)
                        {
                            <option value="@position.Id">@position.Name</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>
